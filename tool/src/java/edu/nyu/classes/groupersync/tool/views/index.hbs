<div> <!-- <div class="container"> -->
  <div> <!-- <div class="col-md-12"> -->
    <h2>Manage Google Groups</h2>
    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th class="col-md-3">Group Name</th>
          <th class="col-md-2">Status</th>
          <th class="col-md-6">Google Group Details</th>
          <th class="col-md-1"></th>
        </tr>
      </thead>
      <tbody>
      {{#each groups}}
      <tr class="group-container" data-sakai-group-id="{{this.sakaiGroupId}}">
        <td>{{this}}</td>
        <td>{{this.status}}</td>
        <td><strong>{{this.address}}</strong><br>{{this.label}}</td>
        <td>
            {{#if this.availableForSync}}
            <button class="btn btn-primary create-group-btn">Create Google Group</button>
            {{/if}}
        </td>
      </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>
